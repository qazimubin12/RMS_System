<script type="text/javascript">

    window.onload = function () {
        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            title: {
                text: "Hourly Sales"
            },
            axisX: {
                valueFormatString: "HH TT",
                interval: 1,
                intervalType: "hour"
            },
            axisY: {
                title: "Sales",

            },
            legend: {
                cursor: "pointer",
                fontSize: 16,
                itemclick: toggleDataSeries
            },
            toolTip: {
                shared: true
            },
            data: [{
                name: " ",
                type: "spline",
                yValueFormatString: "#,##0.00",
                showInLegend: true,
                dataPoints: [
                    { x: new Date(2017, 6, 24, 6, 00), y: 31 },
                    { x: new Date(2017, 6, 24, 7, 00), y: 31 },
                    { x: new Date(2017, 6, 24, 8, 00), y: 29 },
                    { x: new Date(2017, 6, 24, 9, 00), y: 29 },
                    { x: new Date(2017, 6, 24, 10, 00), y: 31 }
                ]
            }]
        });
        chart.render();
        function toggleDataSeries(e) {
            if (typeof (e.dataSeries.visible) === "undefined" || e.dataSeries.visible) {
                e.dataSeries.visible = false;
            }
            else {
                e.dataSeries.visible = true;
            }
            chart.render();
        }


    };

    $(function () {
        var bar_data = {
            data: [[1, 10], [2, 8], [3, 4], [4, 13], [5, 17], [6, 9]],
            bars: { show: true }
        }
        $.plot('#waiter-performance', [bar_data], {
            grid: {
                borderWidth: 1,
                borderColor: '#f3f3f3',
                tickColor: '#f3f3f3'
            },
            series: {
                bars: {
                    show: true, barWidth: 0.5, align: 'center',
                },
            },
            colors: ['#3c8dbc'],
            xaxis: {
                ticks: [[1, 'January'], [2, 'February'], [3, 'March'], [4, 'April'], [5, 'May'], [6, 'June']]
            }
        })
    })


</script>

