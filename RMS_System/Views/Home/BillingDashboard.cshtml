
@{
    ViewBag.Title = "BillingDashboard";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <table class="col-md-12">
                            <tr>
                                <td>
                                    <h4 class="card-title">Billing Dashboard</h4>
                                </td>
                                <td>
                                    <button class="btn btn-success" type="button" onclick="LoadCart()">LOAD BILLS</button>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="card-body">
                        <div id="ActionContainer">

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

