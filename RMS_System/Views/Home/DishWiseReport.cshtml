@model RMS_System.ViewModels.AdminViewModel
@{
    ViewBag.Title = "DishWiseReport";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-9">

                @using (Html.BeginForm("DishWiseReport", "Home", FormMethod.Post))
                {
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="far fa-clock"></i></span>
                            </div>
                            <input hidden name="date" type="text" value="@Model.ProvidedDate" class="form-control float-right" id="reservationtime">
                        </div>
                        <!-- /.input group -->


                        <div class="col-md-3">
                            <button class="btn btn-outline-primary " type="submit">Get Report</button>

                        </div>
                    </div>
                }

            </div>
        </div>
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Dish Wise Revenue</h3>

                    </div>
                    @using (Html.BeginForm("ExportDishWise", "Home", FormMethod.Post))
                    {

                        <input name="date" type="text" value="@Model.ProvidedDate" />
                        <button style="margin: 20px; margin-top: 5px;" class="btn btn-outline-success" type="submit">EXPORT TO EXCEL</button>

                    }

                    <div class="card-body">
                        <div id="daily-orders" style="height: 100%;">
                            <table class="table table-bordered table-condensed">
                                <tr>
                                    <td>Date</td>
                                    <td>Item Name</td>
                                    <td>Ordered Times</td>
                                    <td>Revenue</td>
                                </tr>

                                @foreach (var item in Model.DishWiseData)
                                {
                                    <tr>
                                        <td>@item.StartDate - @item.EndDate</td>
                                        <td>@item.ItemName</td>
                                        <td>@item.OrderCount</td>
                                        <td>@item.Revenue</td>

                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>

            </section>
        </div>

    </div>
</section>



<script>

    $('#reservationtime').daterangepicker({
        timePickerIncrement: 30,
        locale: {
            format: 'MM/DD/YYYY'
        }
    })

</script>
